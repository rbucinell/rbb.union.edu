doctype html
html(lang='en')
    //                                                                                                      
    // Do not modify this file! It was automatically generated. To change it's content go to content folder 
    //                                                                                                      
    block config
    include ./head.pug
    block head
    include ./mixins.pug
    body
        article#wrapper 
            //- site navigation menu
            include ./nav.pug

            //- Main content
            main#main
                header.page-header
                    if course
                        h1#pageheader #{ course }
                            small &nbsp;#{courseName}
                    else 
                        h1#pageheader #{name}
                    ul.breadcrumb
                        if course
                            li: a(href="/courselisting.html") Courses
                            li: a(href="./") #{course}
                        li #{menu}
                        li.active: a(href="#") #{name}
                section#dadcontent
                block content
                section.updated 
            include ./footer.pug
        include ./scripts
        block scripts